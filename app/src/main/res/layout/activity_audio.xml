<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AudioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="30dp">

                    <ImageButton
                        android:id="@+id/btnLuca"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/button_bg_round"
                        android:scaleType="fitCenter"
                        android:src="@drawable/panilallo" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Panilallo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnDiup"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="0"
                        android:background="@drawable/button_bg_round"
                        android:scaleType="fitCenter"
                        android:src="@drawable/diup" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diup" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="30dp">

                    <ImageButton
                        android:id="@+id/btnPica"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/button_bg_round"
                        android:scaleType="fitCenter"
                        android:src="@drawable/pix" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pixinho" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnQaro"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="0"
                        android:background="@drawable/button_bg_round"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qaro" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qarocochi" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="30dp">

                    <ImageButton
                        android:id="@+id/btnTrulli"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/button_bg_round"
                        android:scaleType="fitCenter"
                        android:src="@drawable/trulli" />

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trulli" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnConca"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="0"
                        android:background="@drawable/button_bg_round"
                        android:scaleType="fitCenter"
                        android:src="@drawable/conca" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="La Conca" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="30dp">

                    <ImageButton
                        android:id="@+id/btnPres"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/button_bg_round"
                        android:scaleType="fitCenter"
                        android:src="@drawable/pres" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Il pres" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnMarasma"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="0"
                        android:background="@drawable/button_bg_round"
                        android:scaleType="fitCenter"
                        android:src="@drawable/marasma" />

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marasma" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="30dp">

                    <ImageButton
                        android:id="@+id/btnZombi"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/button_bg_round"
                        android:scaleType="fitCenter"
                        android:src="@drawable/zombi" />

                    <TextView
                        android:id="@+id/tv33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zombi" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnDoc"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="0"
                        android:background="@drawable/button_bg_round"
                        android:scaleType="fitCenter"
                        android:src="@drawable/doc" />

                    <TextView
                        android:id="@+id/tvv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dottore" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnPasonzio"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="0"
                        android:background="@drawable/button_bg_round"
                        android:scaleType="fitCenter"
                        android:src="@drawable/pasonzio" />

                    <TextView
                        android:id="@+id/vari"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pasonzio" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>